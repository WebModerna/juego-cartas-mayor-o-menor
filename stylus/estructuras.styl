// Estructura general de la app.
*
    transition all 0.1s ease-in-out

a
    color rosa_suave
    text-decoration none

body
    color gris_fuerte
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
    font-size: 18px
    text-align center

button
    padding 0.5em 1em
    text-transform: uppercase

ul, ol
    li
        margin 0.5rem auto

.cuerpo
    position relative
